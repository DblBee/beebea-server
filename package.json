{
  "name": "beebea-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "typeorm:cli": "node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js",
    "initialize:create": "npm run typeorm:cli -- migration:create",
    "initialize:run": "npm run typeorm:cli -- migration:run -d src/database/initialize-datasource.ts",
    "migration:generate": "npm run typeorm:cli -- migration:generate -d src/database/migration-datasource.ts",
    "migration:create": "npm run typeorm:cli -- migration:create",
    "migration:run": "npm run typeorm:cli -- migration:run -d src/database/migration-datasource.ts",
    "migration:revert": "npm run typeorm:cli -- migration:revert -d src/database/migration-datasource.ts",
    "seed:create": "npm run initialize:create",
    "seed:run": "npm run typeorm:cli -- migration:run -d src/database/seed-datasource.ts",
    "seed:revert": "npm run typeorm:cli -- migration:revert -d src/database/seed-datasource.ts",
    "env:up": "docker-compose up",
    "env:down": "docker-compose down",
    "env:dbUp": "docker-compose up dev-db pgadmin -d",
    "env:dbStop": "docker-compose stop",
    "env:dbDown": "docker-compose down",
    "env:refresh": "npm run env:dbDown && npm run env:dbUp && rm -rf src/database/migrations && npm run migration:generate -- src/database/migrations/initial && npm run initialize:run && npm run migration:run && npm run seed:run"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.1",
    "nestjs-pino": "^3.1.1",
    "pg": "^8.7.3",
    "pino-http": "^8.2.0",
    "pino-pretty": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sha3": "^2.1.4",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.4.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.8",
    "@types/he": "^1.1.2",
    "@types/jest": "28.1.4",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "he": "^1.2.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "testPathIgnorePatterns": [
      "../test",
      "<rootDir>/testing-utility/",
      "<rootDir>/database/migrations",
      "<rootDir>/database/seeds"
    ],
    "modulePathIgnorePatterns": [
      "../test",
      "<rootDir>/testing-utility/",
      "<rootDir>/database/migrations",
      "<rootDir>/database/seeds"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!dist/*",
      "!**/*.module.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
